<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currency_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.currency.CurrencyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/main_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/main_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/currency_from_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"/>

                    <Spinner
                        android:id="@+id/currency_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="left"
                        android:backgroundTint="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/currency_to_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_0"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"/>

                    <Spinner
                        android:id="@+id/currency_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_gravity="left"
                        android:backgroundTint="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="3"
                android:rowCount="5"
                android:paddingVertical="30dp"
                android:paddingHorizontal="10dp"
                android:layout_gravity="bottom"
                android:background="@drawable/grid_layout">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/c"
                    android:text="@string/clear"
                    android:textColor="@color/other_operator_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <ImageButton
                    android:id="@+id/erase"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:backgroundTint="@color/button_bg"
                    android:contentDescription="@string/todo"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@mipmap/delete"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/number7"
                    android:text="@string/seven"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number8"
                    android:text="@string/eight"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number9"
                    android:text="@string/nine"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number4"
                    android:text="@string/four"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number5"
                    android:text="@string/five"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number6"
                    android:text="@string/six"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number1"
                    android:text="@string/one"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number2"
                    android:text="@string/two"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <Button
                    android:id="@+id/number3"
                    android:text="@string/three"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/number0"
                    android:text="@string/zero"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:backgroundTint="@color/button_bg"
                    android:gravity="center_vertical|center_horizontal"
                    app:cornerRadius="15dp"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Button
                    android:id="@+id/comma"
                    android:text="@string/comma"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="15dp"/>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>